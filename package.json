{
  "name": "graphql-schema-tools",
  "version": "0.0.4",
  "description": "Functions & Utilitize for creating and stiching graphql schema",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "webpack || echo not ok",
    "lint": "tslint src/**/*.ts",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "coverage": "npm test -- --coverage --no-cache",
    "coverage:watch": "npm run coverage -- --watch",
    "prepare": "npm run build && npm test",
    "release": "standard-version && npm pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DxCx/graphql-schema-tools.git"
  },
  "keywords": [
    "graphql",
    "typescript",
    "graphql-tools",
    "graphql-schema",
    "schema",
    "stiching",
    "stich",
    "subscriptions"
  ],
  "author": "Hagai Cohen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DxCx/graphql-schema-tools/issues"
  },
  "homepage": "https://github.com/DxCx/graphql-schema-tools#readme",
  "peerDependencies": {
    "graphql": "^0.10.0 || ^0.11.0"
  },
  "devDependencies": {
    "@types/graphql": "^0.11.5",
    "@types/jest": "^21.1.4",
    "@types/node": "^8.0.46",
    "delete-empty": "^1.0.1",
    "graphql": "^0.11.7",
    "graphql-iso-date": "^3.3.0",
    "jest": "^21.2.1",
    "standard-version": "^4.2.0",
    "ts-jest": "^21.1.3",
    "ts-loader": "^3.0.5",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typescript": "2.5.3",
    "webpack": "3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "merge": "^1.2.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/__tests__/",
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "testRegex": "__tests__/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
